<h1 class="text-center">PMI Online Credential Registry</h1>

<%= button_to "Parse", 
     { :controller => :certification, :action=> :background, :page => @current_page}, 
     { :remote => true, :id => 'parse_button', :class => 'btn btn-primary btn-large center-block'}
%>

<br>
<center>
	<div style="width:200px">
		<div id="result"></div>
	</div>
</center>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Last name</th>
      <th>First name</th>
      <th>City</th>
      <th>Credential</th>
      <th>Earned</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @certificates.each do |certificate| %>
      <tr>
        <td><%= certificate.last_name %></td>
        <td><%= certificate.first_name %></td>
        <td><%= certificate.city %></td>
        <td><%= certificate.credential %></td>
        <td><%= certificate.earned %></td>
        <td><%= certificate.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>